{
  "name": "nextjs-template",
  "version": "0.0.0",
  "scripts": {
    "build": "next build",
    "clean": "rimraf .next",
    "dev": "next",
    "format": "prettier --write '**/*.{js,md,scss,ts,tsx,yml}' '!**/{build,es,lib,storybook,ts,umd}/**'",
    "format:diff": "prettier --list-different '**/*.{js,md,scss,ts,tsx,yml}' '!**/{build,es,lib,storybook,ts,umd}/**'",
    "lint": "eslint src",
    "start": "next start",
    "test": "jest",
    "postinstall": "husky install"
  },
  "dependencies": {
    "@carbon/react": "^1.11.0",
    "classnames": "^2.3.1",
    "gray-matter": "^4.0.3",
    "next": "^12.2.5",
    "next-mdx-remote": "^4.1.0",
    "react": "^17.0.2",
    "react-dom": "^17.0.2",
    "sass": "^1.54.5"
  },
  "devDependencies": {
    "@commitlint/cli": "^17.0.3",
    "@commitlint/config-conventional": "^13.1.0",
    "eslint": "^7.32.0",
    "eslint-config-carbon": "^2.7.0",
    "eslint-config-next": "^11.0.1",
    "husky": "^7.0.0",
    "jest": "^28.1.3",
    "jest-watch-typeahead": "^2.0.0",
    "lint-staged": "^13.0.3",
    "prettier": "^2.3.2",
    "prettier-config-carbon": "^0.4.0",
    "rimraf": "^3.0.2"
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ]
  },
  "lint-staged": {
    "**/*.js": [
      "prettier --write",
      "eslint"
    ],
    "**/*.scss": [
      "prettier --write"
    ],
    "**/*.{md,yml}": [
      "prettier --write"
    ]
  }
}